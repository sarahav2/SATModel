                {{/if_eq}}

                {{#if_eq this.questionType "Open" this.section "2"}}

                    {{> input/openAns}}

                {{/if_eq}}

            {{/each}}

            </tbody>

        </table>

        </div>

        <div class="col-lg-3 column">
          <table class="questions-table" align="left">

            {{!-- <tbody> --}}
