<script type = 'text/javascript' src= "../assets/js/submit.js"></script>

<div class = "container animated fadeIn">
    <div class="row">
      <div class="col-lg-12">

      <h1 id="testId" data-test="{{questions.[0].PracticeTestId}}">Practice Test #{{questions.[0].PracticeTestId}}</h1>
      <hr />

      </div>
    </div>
    <div class= "row">
        <!--column 1-->

        <div class="col-lg-3">
          <table class="questions-table" align="left">

            {{!-- <tbody> --}}
            {{#each questions}}

                {{#if_eq this.questionType "MC" this.section "1"}}
                    {{> input/mulchoice}}

                {{/if_eq}}

                {{#if_eq this.questionType "Open" this.section "1"}}

                    {{> input/openAns}}

                {{/if_eq}}

            {{/each}}

            </tbody>

        </table>

        </div>

        <div class="col-lg-3 column">
          <table class="questions-table" align="left">

            {{!-- <tbody> --}}
            {{#each questions}}


                {{#if_eq this.questionType "MC" this.section "2"}}
