<div class="container animated fadeIn">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 loginText">
            <h1 class="text-center"><span class="fa fa-sign-in"></span> Login</h1>

            <br>
            <br>

            <!-- show any messages that come back with authentication-->
            {{#if message.message}}
                <div class="alert alert-danger">{{message.message}}</div>
            {{/if}}
            <!-- LOGIN FORM -->
            <form action="/login" method="post">

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <div class="col-sm-4 col-sm-offset-10">
                    <button type="submit" class="btn btn-lg" class="button">Login</button>
                </div>
            </form>

            <br>
            <br>

            <div class="row">

                <br>
                <br>

                <p class="redirection">Need an account? <a href="/signup">Signup</a></p>
                <p class="redirection">Or go <a href="/">home</a>.</p>
            </div>
        </div>
    </div>
</div>
