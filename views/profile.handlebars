<div class="row">

    <div class="col-lg-3 column" id="profileInfo">
        <h1 class="text-center"><b>Welcome, {{user.firstName}}!</b></h1>
        <center><img id="profilePhoto" src="assets/images/gspic.jpg"></center>
        <div class="text-center" id="userInformation">
          <br />
            <p>{{user.firstName}} {{user.lastName}}</p>
            <p>{{user.email}}</p>
        </div>
    </div>
    <br>
    <div class="col-lg-9">

        <center>
            <table class="table-striped table-hover text-center" id="profileTable">
                <tr class="text-center">
                    <caption class="text-center">
                        <h2>Tests Taken</h2></caption>
                    <th class="userTableHeader">
                        <h3>Practice Test</h3></th>
                    <th class="userTableHeader">
                        <h3>Score</h3></th>
                    <th class="userTableHeader">
                        <h3>Date</h3></th>
                </tr>

                {{#each tests}}
                    {{>profile/testlist}}
                {{/each}}
            </table>
        </center>
    </div>
</div>
